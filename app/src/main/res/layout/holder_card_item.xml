<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/root"
    android:padding="10dp">

    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginRight="10dp"
        android:id="@+id/card_image"
        android:src="@drawable/ic_master_card_vector"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33** **** **** 56"
            android:id="@+id/card_number"
            android:textColor="@color/icon_8_muted_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_hlder_name"
            android:text="Samir goel"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select"
        android:padding="10dp"
        android:id="@+id/select_text"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textColor="@color/icons_8_muted_blue"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_btn"
        android:src="@drawable/ic_delete_vector"
        android:tint="@color/icons_8_muted_grey"/>

</LinearLayout>