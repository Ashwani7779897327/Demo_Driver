<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/root"
    tools:context=".AddVehicleActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="11">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:background="#dfdfdf"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <customviews.typefacesviews.TypeFaceGoogleBold
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="@string/create_vehicle"
                        android:textColor="#333333"
                        android:layout_weight="1"
                        android:textStyle="bold">

                    </customviews.typefacesviews.TypeFaceGoogleBold>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/info"
                        android:id="@+id/create_vehicle_info"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_round_corner_grey">
                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/REGISTER_ACTIVITY__select_car_type"
                        android:textSize="10dp" />

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/car_type_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/click_to_select"
                        android:textColorHint="@color/icons_8_muted_blue"
                        android:maxLines="1"
                        android:drawableRight="@drawable/ic_sort_down_vector"
                        android:textSize="15dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llFieldVehicleMake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/icons_8_muted_grey"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <EditText
                            android:id="@+id/edtVehicleMake"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="#ffffff"
                            android:hint="@string/enter_vehicle_make"
                            android:paddingLeft="20dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            android:textSize="13dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorView" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llSelectVehicleMake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_round_corner_grey">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_car_make"
                        android:textSize="10dp" />


                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/edt_car_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_sort_down_vector"
                        android:hint="@string/click_to_select"
                        android:textColorHint="@color/icons_8_muted_blue"
                        android:textSize="15dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llFieldVehicleModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/icons_8_muted_grey"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <EditText
                            android:id="@+id/edtVehicleModel"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="#ffffff"
                            android:hint="@string/enter_vehicle_model"
                            android:paddingLeft="20dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            android:textSize="13dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorView" />

                    <LinearLayout
                        android:id="@+id/llNoOfSeats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtNoOfSeats"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:background="#ffffff"
                                android:paddingRight="20dp"
                                android:hint="@string/enter_no_of_seats"
                                android:paddingLeft="20dp"
                                android:inputType="number"
                                android:textColorHint="@color/icons_8_muted_grey"
                                android:textSize="13dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorView" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llSelectVehicleModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_round_corner_grey">

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/REGISTER_ACTIVITY__select_car_model"
                        android:textSize="10dp"/>


                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/tv_car_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_sort_down_vector"
                        android:hint="@string/click_to_select"
                        android:textColorHint="@color/icons_8_muted_blue"
                        android:textSize="15dp" />

                </LinearLayout>


                <!--<android.support.design.widget.TextInputLayout-->
                    <!--app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"-->
