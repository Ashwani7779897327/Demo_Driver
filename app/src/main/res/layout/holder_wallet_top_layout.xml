<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pure_white"
            android:orientation="vertical"
            android:gravity="center">

            <customviews.typefacesviews.TypeFaceGoogleBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="35dp"
                android:id="@+id/wallet_amount_text"
                android:textColor="@color/icon_8_muted_black"/>

            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available_balance"
                android:textSize="12dp"
                android:layout_marginTop="-5dp"
                android:textColor="@color/icons_8_muted_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center|left"
                        android:id="@+id/add_money_btn"
                        android:textColor="@color/pure_white"
                        android:background="@color/icons_8_muted_orange"
                        android:text="@string/add_money"/>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="0dp">
                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:background="@color/icons_8_muted_yellow_dark"
                        android:id="@+id/promo_code_btn"
                        android:textColor="@color/pure_white"
                        android:text="Have a promo code?"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/recent_layout_transaction">
        <customviews.typefacesviews.TypeFaceGoogleBold
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/recent_transactions"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <customviews.typefacesviews.TypeFaceGoogleBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:drawableLeft="@drawable/ic_filter_vector"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:id="@+id/filter"
            android:textColor="@color/icons_8_muted_blue"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>