<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/left_side_msg_layout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/icons_8_muted_green_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/left_txt"
                    android:layout_gravity="center|left"
                    android:text=""
                    android:textColor="@color/pure_white"/>
                <morxander.zaman.ZamanTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|right"
                    android:textSize="13dp"
                    android:layout_marginTop="-8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pure_white"
                    android:text="justnow"
                    android:id="@+id/left_date"
                    android:padding="3dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginLeft="25dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/right_side_msg_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@color/icons_8_muted_yellow_dark"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/right_text"
                    android:gravity=""
                    android:text="right side me side message right side message"
                    android:textColor="@color/pure_white"/>


                <morxander.zaman.ZamanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textSize="13dp"
                    android:textColor="@color/pure_white"
                    android:id="@+id/right_date"
                    android:layout_marginTop="-9dp"
                    android:maxLines="1"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:padding="3dp"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>