<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:id="@+id/root">


    <LinearLayout
        android:id="@+id/docs_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/see_docs"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_now"
                android:gravity="center"
                android:textColor="@color/tracking_theme"
                android:textSize="14sp"
                android:padding="4dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close_docs"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cross_close"
                android:tint="@color/pure_white" />

        </LinearLayout>



        <customviews.typefacesviews.TypeFaceGoogle
            android:id="@+id/expiry_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_update_the_documents_asap_otherwise_you_wont_be_able_to_accept_rides"
            android:textSize="12sp"
            android:padding="3dp"
            android:visibility="gone"
            android:textColor="@color/pure_white" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/pure_white">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginLeft="7dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="10dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_btn_goto_home"/>
                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/icons_8_muted_green_1"
                    android:id="@+id/goto_home_text"
                    android:textStyle="bold"
                    android:text="@string/go_to_home"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/switch_controll_go_to_home"
                android:elevation="10dp">

            </RelativeLayout>
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connection_status"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:paddingLeft="18dp"
            android:text=""/>




        <customviews.typefacesviews.TypefaceDosisRegular
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />



        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="5dp"
            android:layout_marginRight="5dp"
                android:id="@+id/notification_btn">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_notifications_vector"
                    android:tint="@color/icons_8_muted_yellow_dark"/>

                <customviews.typefacesviews.TypeFaceGoogle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:layout_gravity="center"
                    android:textColor="@color/icons_8_muted_yellow_dark"/>
            </LinearLayout>


        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="10dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_btn"/>
                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_text"
                    android:id="@+id/online_offline_text"
                    android:textStyle="bold"
                    android:text="@string/MAIN_ACTIVITY__offline"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/switch_controll"
                android:elevation="10dp"></RelativeLayout>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/frameAuto"
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="10dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_btn_auto"/>
                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_text"
                    android:id="@+id/auto_text"
                    android:textStyle="bold"
                    android:text="@string/auto_17"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/switch_controll_auto"
                android:elevation="10dp">

            </RelativeLayout>
        </FrameLayout>



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <customviews.typefacesviews.TypeFaceGoogleBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today_bookings"
                            android:textStyle="bold" />

                        <customviews.typefacesviews.TypeFaceGoogle
                            android:id="@+id/todays_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <customviews.typefacesviews.TypeFaceGoogleBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/todays_earnings"
                            android:textStyle="bold" />

                        <customviews.typefacesviews.TypeFaceGoogle
                            android:id="@+id/todays_earning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/icons_8_muted_green_1"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_manual_dispatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                app:cardCornerRadius="17dp">

                <customviews.typefacesviews.TypeFaceGoogle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="15dp"
                    android:paddingTop="7dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="7dp"
                    android:text="@string/MAIN_ACTIVITY_manual_dispatch"
                    android:textColor="@color/pure_white"
                    android:textSize="12dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#f1f1f1">

                <LinearLayout
                    android:id="@+id/view_cars"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <customviews.typefacesviews.TypeFaceGoogleBold
                        android:id="@+id/tvVehicleStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/live_now"
                        android:textColor="@color/icons_8_muted_green_1"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/activated_car_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                         />
                  


                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/activated_car_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/icon_8_muted_black"
                        android:textSize="8dp" />


                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/activated_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/icon_8_muted_black"
                        android:textSize="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50dp"
                tools:context=".MainActivity" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pure_white"
            android:layout_margin="40dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvSocketConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAtitide"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/socketAck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acknowledge Response"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="5dp"
            app:cardCornerRadius="17dp"

            android:id="@+id/demand_Spot">
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demand_spot"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/pure_white"/>
        </androidx.cardview.widget.CardView>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:id="@+id/todays_schedule_text"
            android:layout_marginBottom="-2dp">

            <ImageView
                android:layout_width="60dp"
                android:visibility="gone"
                android:layout_height="60dp"
                android:id="@+id/bottom_bell"
                android:src="@drawable/ic_bell_bottom_vector"
                android:tint="@color/icons_8_muted_orange_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/main_screen_conter_text"
                android:background="@color/icons_8_muted_orange_dark"
                android:textColor="@color/pure_white"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="36dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/show_outstation_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_notifications_vector"
                android:tint="@color/icons_8_muted_blue"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/no_of_count"
                android:textColor="@color/pure_white"/>



        </FrameLayout>
















        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            app:cardCornerRadius="17dp"
            android:id="@+id/btn_upcomming_ride">

            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_requests"
                android:paddingTop="7dp"
                android:textFontWeight="1"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/pure_white"/>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/placeholder_layout"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f4f4f4"
                android:gravity="center">
                <com.sam.placer.PlaceHolderView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeholder">

                </com.sam.placer.PlaceHolderView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            android:id="@+id/bottom_cross">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_close_vector"
                android:tint="@color/icons_8_muted_grey"
                android:padding="15dp"/>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/llViewBottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/trips_btn">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_trips"
                android:tint="@color/icons_8_muted_grey"/>
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips"
                android:textStyle="normal"
                android:textColor="@color/icons_8_muted_grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/earning_btn">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_money_vector"
                android:tint="@color/icons_8_muted_grey"/>
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earnings"
                android:textStyle="normal"
                android:textColor="@color/icons_8_muted_grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/accounts_btn"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_user_account_vector"
                android:tint="@color/icons_8_muted_grey"/>
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accounts"
                android:textStyle="normal"
                android:textColor="@color/icons_8_muted_grey"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/wallet_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:src="@drawable/ic_wallet_vector"
                android:tint="@color/icons_8_muted_grey"/>
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MAIN_ACTIVITY__wallet"
                android:textStyle="normal"
                android:textColor="@color/icons_8_muted_grey"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/settings_btn"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_settings_vector"
                android:tint="@color/icons_8_muted_grey"/>
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textStyle="normal"
                android:textColor="@color/icons_8_muted_grey"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>