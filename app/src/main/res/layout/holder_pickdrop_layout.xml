<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="  Pick location goes here with other details "
        android:drawableLeft="@drawable/ic_pin_circular_green_vector"
        android:id="@+id/pick_address_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/drop_address_txt"
        android:text="  Pick location goes here with other details "
        android:drawableLeft="@drawable/ic_pin_circular_red_vector"
        />


</LinearLayout>