<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".7"
        android:background="@color/colorBlack" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp"
        android:layout_centerInParent="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_cross_close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="65dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:text="@string/PRICE_FARE____total_distance"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_ride_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/pure_black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_symbol"
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/PRICE_FARE____total_time"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/pure_black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_symbol"
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/PRICE_FARE____total_waiting_time"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_waiting_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55345.Miles"
                        android:textColor="@color/pure_black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_symbol"
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/PRICE_FARE__fare"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fare_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:text="@string/PRICE_FARE__ride_time_charges"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/ride_time_charges_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:text="@string/PRICE_FARE__waiting_charge"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/waiting_charge_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:text="@string/PRICE_FARE__night_charges"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/night_charge_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:text="@string/PRICE_FARE__peak_time_charges"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/peak__charge_txt_charge_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_code_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="--------"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/coupon_price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/PRICE_FARE__net_fare"
                    android:textColor="@color/icons_8_muted_grey_very_dark"
                    android:textSize="17dp" />


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/tv_ride_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- - - "
                        android:textColor="@color/pure_black"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
