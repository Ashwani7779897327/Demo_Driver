<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.subscriptionModule.SubscriptionModuleList">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_for_subscription"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:rotation="90"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp" />


                        <customviews.typefacesviews.TypeFaceGoogleBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/your_subscription" />

                    </FrameLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">


                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/image_show1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center" />

                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>


            <customviews.typefacesviews.TypeFaceGoogleBold
                android:id="@+id/package_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="#7184e4"
                android:textSize="22dp" />


            <LinearLayout
                android:id="@+id/llActivatedPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/tvActivate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/currently_activated" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="8dp">


                        <customviews.typefacesviews.TypeFaceGoogle
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:padding="4dp"
                            android:text="@string/rides_left" />


                        <customviews.typefacesviews.TypeFaceGoogle
                            android:id="@+id/rides_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:padding="4dp"
                            android:text="" />


                    </LinearLayout>


                </LinearLayout>


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:progress="50"
                    android:progressTint="@color/colorPrimary" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="8dp">


                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/valid_till" />

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/valid_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="" />


                </LinearLayout>

            </LinearLayout>


            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/about_package"
                android:textSize="20dp" />


            <customviews.typefacesviews.TypeFaceGoogle
                android:id="@+id/about_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:text="" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <customviews.typefacesviews.TypeFaceGoogleBold
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/validity"
                        android:textSize="18dp" />

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/validity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <customviews.typefacesviews.TypeFaceGoogleBold
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/max_trips_6"
                        android:textSize="18dp" />

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/maximum_rides1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llExpiryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <customviews.typefacesviews.TypeFaceGoogleBold
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/expiry_date_package"
                        android:textSize="18dp" />

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:id="@+id/expiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/services"
                    android:textSize="20dp" />


                <com.sam.placer.PlaceHolderView
                    android:id="@+id/placeholder_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp">


                </com.sam.placer.PlaceHolderView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/btnBuyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="@string/buy_now"
        android:textColor="@color/pure_white" />


</FrameLayout>


