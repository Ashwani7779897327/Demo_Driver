<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/pure_white"
        android:padding="5dp">


        <customviews.typefacesviews.TypeFaceGoogleBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/please_confirm_this_receipt_with_the_customer"/>

        <customviews.typefacesviews.TypeFaceGoogle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/standard_bill_details"
            android:layout_marginTop="5dp"
            android:id="@+id/text_service_type"
            android:layout_marginBottom="5dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/circular_image"
            android:layout_marginTop="5dp"
            android:src="@color/icons_8_muted_grey"/>

        <customviews.typefacesviews.TypeFaceGoogle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/standard_bill_details"
            android:layout_marginTop="5dp"
            android:id="@+id/image_name"
            android:layout_marginBottom="5dp"/>


        <customviews.typefacesviews.TypeFaceGoogleBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/icons_8_muted_red"
            android:textStyle="bold"
            android:id="@+id/price_text"
            android:textSize="40dp"/>
        



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.apporio.demotaxiappdriver.typeface.TextTypeBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons_8_muted_green_1"
                        android:text="@string/pick"/>
                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:layout_weight="1"
                        android:id="@+id/pick_location"
                        android:textColor="@color/icons_8_muted_green_1"
                        android:text="B445-90 Block A, Ramesh Block Colony, Indrapur , Delhi 110096"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.apporio.demotaxiappdriver.typeface.TextTypeBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/icons_8_muted_red"
                        android:text="@string/drop"/>

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center|top"
                        android:textSize="10dp"
                        android:textColor="@color/icons_8_muted_red"
                        android:layout_weight="1"
                        android:id="@+id/drop_location_txt"
                        android:text="Splaze itech park , Sohna Road Tower B2 Apporio Infolabs "/>
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view_receipt_btn">

            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="fill_parent"
                android:layout_height="39dp"
                android:background="@color/icons_8_muted_greydark"
                android:gravity="center"
                android:text="@string/view_receipt"
                android:textColor="@color/pure_white" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/receipt_view">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center">



                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="34 miles"
                    android:textSize="15dp"
                    android:id="@+id/left_text"
                    android:textColor="@color/icon_8_muted_black"
                    android:textStyle="bold"/>


                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1HR 22min"
                    android:textSize="15dp"
                    android:id="@+id/right_text"
                    android:textColor="@color/icon_8_muted_black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/receipt_layout"></LinearLayout>
        </LinearLayout>









    </LinearLayout>
</androidx.cardview.widget.CardView>