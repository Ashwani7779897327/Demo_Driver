<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-3dp"
    android:layout_marginRight="-3dp"
    android:id="@+id/root"
    android:layout_marginTop="5dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/05/2018 at11:03 PM"
                        android:id="@+id/highligted_left_text"
                        android:textColor="@color/icon_8_muted_black"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:id="@+id/small_left_text"
                        android:text="Maruti Suzuki Wagon R" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 556.90"
                        android:id="@+id/highligted_right_text"
                        android:textColor="@color/icon_8_muted_black"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:id="@+id/small_right_text"
                        android:text="Cash" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est.fare"/>

                        <TextView
                            android:id="@+id/est"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/green_text"
                            android:layout_marginRight="5dp"
                            android:text=".."/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>




        </LinearLayout>


        <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
            android:id="@+id/tv_pickup_addresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:padding="5dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="  Spaze Itech Park Sohna Road Gurugram, Some colony name goes here"
            android:textColor="@color/icons_8_muted_grey"
            android:drawableLeft="@drawable/ic_pin_circular_green_vector"
            geekui:customTypeface="OpenSans_Regular.ttf" />

        <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
            android:id="@+id/tv_dropp_addresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="  Guru central , Ahemdabbad, Inter Colony , some society"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_pin_circular_red_vector"
            android:textColor="@color/icons_8_muted_grey"
            geekui:customTypeface="OpenSans_Regular.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/user_description_layout"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@color/icons_8_muted_grey"
                    app:civ_border_width="2dp"
                    android:id="@+id/circular_image"
                    app:civ_border_color="@color/icons_8_muted_greydark"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/highlighted_text"
                        android:text="Driver Name goes here"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 9650923089"
                        android:textSize="12dp"
                        android:id="@+id/small_text"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:id="@+id/status__txt"
                    android:textColor="@color/icons_8_muted_blue"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>

