<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".EmergencyContatcsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/pure_white">
        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/ic_left_sort_white"
            android:padding="10dp"
            android:tint="#000"
            android:id="@+id/back"/>
        <customviews.typefacesviews.TypeFaceGoogle
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/emergency_contacts"
            android:gravity="center"
            android:paddingRight="20dp"
            android:textColor="@color/black"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rating_button_background"
            android:text="@string/add_new"
            android:id="@+id/add_new_contact"/>

    </LinearLayout>


    <com.sam.placer.PlaceHolderView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/placeholder_emergency_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </com.sam.placer.PlaceHolderView>



</LinearLayout>