<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top"
        android:paddingBottom="5dp"
        android:background="@color/pure_white">


        <customviews.typefacesviews.TypeFaceGoogleBold
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/PRICE_FARE_receipt"
            android:textSize="30dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/receipt_view">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center">



                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="34 miles"
                    android:textSize="15dp"
                    android:id="@+id/left_text"
                    android:textColor="@color/icon_8_muted_black"
                    android:textStyle="bold"/>


                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1HR 22min"
                    android:textSize="15dp"
                    android:id="@+id/right_text"
                    android:textColor="@color/icon_8_muted_black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/receipt_layout"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>