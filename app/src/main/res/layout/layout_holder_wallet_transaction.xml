<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout  android:padding="8dp"
        android:background="@color/colorWhite"
        android:id="@+id/ll_wallet_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView

        android:layout_centerVertical="true"
        android:id="@+id/iv_transaction"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginRight="10dp"

        />

    <LinearLayout
        android:id="@+id/ll_details"
        android:layout_toRightOf="@+id/iv_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView

            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Money added in wallet by admin"
            android:textSize="15sp"
            android:textColor="@color/pure_black"
            />
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ll_details"
        android:gravity="right"
        android:text="$200"
        android:textSize="15dp"
        android:textStyle="bold" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/mdtp_dark_gray"
        android:layout_height="0.5dp"/>


</LinearLayout>