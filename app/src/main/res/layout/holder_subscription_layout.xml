<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_notifications_vector"
            android:tint="@color/icons_8_muted_greydark"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|left">
            <customviews.typefacesviews.TypeFaceGoogleBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading_line"
                android:id="@+id/head_line"
                android:textStyle="bold"/>
            <customviews.typefacesviews.TypeFaceGoogle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/message_text"
                android:text="_______________________________"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>